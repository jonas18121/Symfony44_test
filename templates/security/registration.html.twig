{% extends "base.html.twig" %}

{% block body %}
    
    <h1> Inscription </h1>

    {{ form_start(formRegistraion) }}

    {{ 
        form_row(formRegistraion.username, {
            'attr' : {
                'placeholder' : 'Entrez votre nom'
            },

            'label' : 'Nom'
        }) 
    }}

    {{ 
        form_row(formRegistraion.email, {
            'attr' : {
                'placeholder' : 'Entrez votre email'
            },

            'label' : 'Email'
        }) 
    }}

    {{ 
        form_row(formRegistraion.password, {
            'attr' : {
                'placeholder' : 'Entrez votre mot de passe'
            },

            'label' : 'mot de passe'
        }) 
    }}

    {{ 
        form_row(formRegistraion.confirm_password, {
            'attr' : {
                'placeholder' : 'Confirmez votre nom de passe'
            },

            'label' : 'confirmation de mot de passe '
        }) 
    }}


    <button type="submit" class="btn btn-primary"> Inscription </button>
    {{ form_end(formRegistraion) }}

{% endblock body %}