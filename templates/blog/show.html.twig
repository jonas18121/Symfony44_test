{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{article.title}}</h2>
        <div class="metadata"> 
            Ecrit le {{ article.createdAt | date('d/m/y') }} à {{ article.createdAt | date('H:i:s') }} dans la catégorie Politique
        </div>
        <div class="content"> 
            <img src="{{ article.image }}" alt="">
            <p>
                {# filtre raw pour ne pas afficher les balises html  #}
                {{ article.content | raw }}
            </P>
        </div>
    </article>
{% endblock %}