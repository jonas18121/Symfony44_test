{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{article.title}}</h2>
        <div class="metadata"> 
            Ecrit le {{ article.createdAt | date('d/m/y') }} à {{ article.createdAt | date('H:i:s') }} 
            dans la catégorie {{ article.category.title }}
        </div>
        <div class="content"> 
            <img src="{{ article.image }}" alt="">
            <p>
                {# filtre raw pour ne pas afficher les balises html  #}
                {{ article.content | raw }}
            </P>
        </div>
    </article>

    <section id="commentaires">
        <h2>{{ article.comments | length }} Commentaires : </h2>
        {% for comment in article.comments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{ comment.author }} (<small> {{ comment.createdAt | date('d/m/y à H:i') }}</small>)
                    </div>
                    <div class="col-3">
                        {{ comment.content | raw }}
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if app.user %}
        {{ form_start(commentForm) }}

        {{ 
            form_row(commentForm.author, {
                'attr' : {
                    'placeholder' : "votre nom"
                }
            }) 
        }}

        {{ 
            form_row(commentForm.content, {
                'attr' : {
                    'placeholder' : "votre commentaire"
                }
            }) 
        }}

        <button type="submit" class="btn btn-primary">Enregister</button>

        {{ form_end(commentForm) }}

        {% else %}
            <h2>connectez vous pour ecrire un commentaire</h2>
            <a href="{{ 'security_login' }}" class="btn btn-prymary"> connexion </a>
        {% endif %}
        
    </section>
{% endblock %}